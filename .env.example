# Database Configuration
MONGODB_URI=mongodb://localhost:27017/your-database-name
# MongoDB connection string for the application database

DATABASE_URL=postgres://your-postgres-connection-string
# PostgreSQL connection string for relational data
# PostgreSQL connection string for relational data

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
# Secret key used for signing and verifying JSON Web Tokens

# Pusher Configuration (Real-time features)
PUSHER_APP_ID=your-pusher-app-id
# Pusher application ID from your Pusher dashboard
PUSHER_KEY=your-pusher-key
# Pusher application key for server-side operations
PUSHER_SECRET=your-pusher-secret
# Pusher application secret for server-side operations
PUSHER_CLUSTER=your-pusher-cluster
# Pusher cluster region (e.g., us2, eu, ap1)

# Public Pusher Configuration (Client-side)
NEXT_PUBLIC_PUSHER_KEY=your-public-pusher-key
# Public Pusher key exposed to the client-side application
NEXT_PUBLIC_PUSHER_CLUSTER=your-pusher-cluster
# Pusher cluster region for client-side connections

# Cloudinary Configuration (Image/File Upload)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
# Cloudinary cloud name from your Cloudinary account
CLOUDINARY_API_KEY=your-cloudinary-api-key
# Cloudinary API key for authentication
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
# Cloudinary API secret for authentication

# Email Service Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
# SMTP server hostname for sending emails
EMAIL_PORT=587
# SMTP server port (587 for TLS, 465 for SSL, 25 for non-secure)
EMAIL_USER=your-email@gmail.com
# Email address used for sending emails
EMAIL_PASS=your-email-password-or-app-password
# Email password or app-specific password for authentication

# Application URLs
FRONTEND_URL=http://localhost:3000
# Base URL of the frontend application for email links and redirects

# IntaSend Payment Gateway Configuration
INTASEND_PUBLIC_KEY=your_intasend_public_key_here
# Public key from IntaSend dashboard
INTASEND_SECRET_KEY=your_intasend_secret_key_here
# Secret key from IntaSend dashboard
INTASEND_WALLET_ID=your_intasend_wallet_id_here
# Wallet ID from IntaSend dashboard
INTASEND_WEBHOOK_CHALLENGE=your_webhook_challenge_secret_here
# Challenge secret for webhook verification

# Payment Provider Configuration
NEXT_PUBLIC_PAYMENT_PROVIDER=intasend
# Payment provider (intasend, mpesa, etc.)

# Legacy M-Pesa Configuration (deprecated)
# M-Pesa Daraja API Configuration
MPESA_CONSUMER_KEY=your_consumer_key_here
# Consumer key from M-Pesa Daraja API
MPESA_CONSUMER_SECRET=your_consumer_secret_here
# Consumer secret from M-Pesa Daraja API
MPESA_SHORTCODE=your_shortcode_here
# M-Pesa shortcode for the business
MPESA_PASSKEY=your_passkey_here
# M-Pesa passkey for generating passwords
MPESA_ENVIRONMENT=sandbox  # or production
# Environment: sandbox for testing, production for live